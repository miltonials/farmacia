<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorProducto</servlet-name>
        <servlet-class>controlador.ControladorProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorDetalleVenta</servlet-name>
        <servlet-class>controlador.ControladorDetalleVenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCargoEmpleado</servlet-name>
        <servlet-class>controlador.ControladorCargoEmpleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorFarmaceutica</servlet-name>
        <servlet-class>controlador.ControladorFarmaceutica</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorProducto</servlet-name>
        <url-pattern>/ControladorProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorDetalleVenta</servlet-name>
        <url-pattern>/ControladorDetalleVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCargoEmpleado</servlet-name>
        <url-pattern>/ControladorCargoEmpleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorFarmaceutica</servlet-name>
        <url-pattern>/ControladorFarmaceutica</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
